{
    "compilerOptions": {
        "esModuleInterop": true,
        "lib": ["es6"],
        "module": "commonjs",
        "noEmit": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "skipLibCheck": true,
        "strict": true,
        "target": "es5"
    },
    "include": ["src/**/*", "__tests__/**/*"]
}
